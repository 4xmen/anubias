{
  "type": "icon",
  "name": "icon",
  "icon": "settings",
  "color": "null",
  "size": 24,
  "padding": "0",
  "align": "null",
  "visible": true,
  "validator": {
    "version": 2,
    "name": {
      "type": "String",
      "regex": "^[a-zA-Z_][a-zA-Z0-9_]*$",
      "state": ""
    },
    "icon": {
      "type": "String",
      "regex": "^.*$",
      "state": "input"
    },
    "color":{
      "type": "String|Color",
      "regex": "^(Colors\\.[a-z]*|Color\\(0x([0-9A-Fa-f]{8}\\))$",
      "state": "input"
    },
    "size": {
      "type":  "Number",
      "regex": "^[0-9]{1,3}$",
      "state": "input"
    },
    "padding" : {
      "type": "String|Number",
      "regex": "^\\d+(,\\d+){0,3}$",
      "state": "input"
    },
    "align" : {
      "type": "String",
      "regex": "^(null|left|right|center)$",
      "state": "input"
    },
    "visible": {
      "type": "Boolean",
      "regex": "^(true|false)$",
      "state": "input"
    }
  }
 }