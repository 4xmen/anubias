{
  "type": "toggle",
  "name": "toggle",
  "text": "Toggle title",
  "fontSize": 14.0,
  "maxLine": 1,
  "activeColor": "null",
  "color": "null",
  "bgColor": "null",
  "checked": false,
  "enabled": true,
  "padding": "0",
  "onChanged": "// run when `state` change\n",
  "visible": true,
  "validator": {
    "version": 2,
    "name": {
      "type": "String",
      "regex": "^[a-zA-Z_][a-zA-Z0-9_]*$",
      "state": ""
    },
    "text": {
      "type": "String",
      "regex": "^.*$",
      "state": "output"
    },
    "fontSize": {
      "type":  "Number",
      "regex": "^\\d+(?:\\.\\d+)?$",
      "state": "input"
    },
    "maxLine": {
      "type":  "Number",
      "regex": "^[0-9]{1,3}$",
      "state": "input"
    },
    "activeColor": {
      "type": "String|Color",
      "regex": "^(Colors\\.[a-z]*|Color\\(0x([0-9A-Fa-f]{8}\\))$",
      "state": "input"
    },
    "color": {
      "type": "String|Color",
      "regex": "^(Colors\\.[a-z]*|Color\\(0x([0-9A-Fa-f]{8}\\))$",
      "state": "input"
    },
    "bgColor": {
      "type": "String|Color",
      "regex": "^(Colors\\.[a-z]*|Color\\(0x([0-9A-Fa-f]{8}\\))$",
      "state": "input"
    },
    "checked": {
      "type": "Boolean",
      "regex": "^(true|false)$",
      "state": "output"
    },
    "enabled": {
      "type": "Boolean",
      "regex": "^(true|false)$",
      "state": "input"
    },
    "padding" : {
      "type": "String|Number",
      "regex": "^\\d+(,\\d+){0,3}$",
      "state": "input"
    },
    "visible": {
      "type": "Boolean",
      "regex": "^(true|false)$",
      "state": "input"
    }
  }
}