{
  "type": "preloader",
  "name": "preloader",
  "padding": "10",
  "align": "center",
  "width": 150.0,
  "height": 150.0,
  "color": "null",
  "visible": true,
  "validator": {
    "version": 2,
    "name" : {
      "type": "String",
      "regex": "^[a-zA-Z_][a-zA-Z0-9_]*$",
      "state": ""
    },
    "padding" : {
      "type": "String|Number",
      "regex": "^\\d+(,\\d+){0,3}$",
      "state": "input"
    },
    "align" : {
      "type": "String|Align",
      "regex": "^(null|left|right|center)$",
      "state": "input"
    },
    "width" : {
      "type": "String|Number",
      "regex":  "^\\d*\\.?\\d+%?$",
      "state": "input"
    },
    "height" : {
      "type": "String|Number",
      "regex":  "^\\d*\\.?\\d+%?$",
      "state": "input"
    },
    "color":{
      "type": "String|Color",
      "regex": "^(Colors\\.[a-z]*|Color\\(0x([0-9A-Fa-f]{8}\\))$",
      "state": "input"
    },
    "visible":{
      "type":  "Boolean",
      "regex": "^(true|false)$",
      "state": "input"
    }
  }
}